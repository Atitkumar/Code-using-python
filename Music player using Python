# music player using python
# import pygame

from pygame import mixer
mixer.init()

mixer.music.load(r"C:\Users\ssc\PycharmProjects\YouTube\song.mp3")
mixer.music.set_volume(0.8)
mixer.music.play()

while True:
    print("Press 'p' to pause 'r' to resume 'e' to exist ")
    query = input(">>> ")

    if query == 'p':
        mixer.music.pause()
    elif query == 'r':
        mixer.music.unpause()
    elif query == 'e':
        mixer.music.stop()
        break
